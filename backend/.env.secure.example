# SECURE ENVIRONMENT CONFIGURATION TEMPLATE
# Copy to .env.local and fill with your actual credentials
# NEVER commit .env files with real credentials

# Twitter API Configuration (Get from https://developer.twitter.com)
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Twitter OAuth 2.0 Configuration
TWITTER_CLIENT_ID=your_oauth_client_id_here
TWITTER_CLIENT_SECRET=your_oauth_client_secret_here

# Groq Configuration (Get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Database Configuration (Use connection string without credentials in URL)
DATABASE_URL=DB_URL

# NextAuth Configuration (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_secure_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Agent Configuration
AGENT_USERNAME=your_twitter_username
TWEET_INTERVAL_MINUTES=60
MAX_TWEET_LENGTH=280
ENABLE_AUTO_REPLY=false
ENABLE_AUTO_TWEET=false

# Development Settings
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Security Note: NEVER store passwords in plain text
# Use proper authentication methods instead

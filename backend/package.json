    "dotenv": "^16.3.0",
    "groq-sdk": "^0.3.0",
    "node-cron": "^3.0.3",
    "ts-node": "^10.9.2",
    "twitter-api-v2": "^1.15.0",
    "typescript": "^5.9.2"

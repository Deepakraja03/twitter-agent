{
  "name": "alith-twitter-agent",
  "version": "1.0.0",
  "description": "Twitter Agent using Alith SDK with Groq integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "interactive": "npm run build && node dist/main.js",
    "tweet": "npm run build && node dist/single-tweet.js",
    "lazai": "npm run build && node dist/lazai-tweet.js",
